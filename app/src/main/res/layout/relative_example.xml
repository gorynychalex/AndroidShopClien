<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="250px">

    <ImageView
        android:id="@+id/image_relative"
        android:background="@drawable/sandwich2"
        android:layout_width="250px"
        android:layout_height="250px" />
    <TextView
        android:textColor="@color/common_google_signin_btn_text_light"
        android:text="Sandwich"
        android:textSize="14sp"
        android:paddingTop="2sp"
        android:paddingLeft="10sp"
        android:layout_marginRight="10sp"
        android:id="@+id/section_prod_name"
        android:layout_toEndOf="@id/image_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/prod_name"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="2sp"
        android:textColor="#004444"
        android:text="Sandwich with roukola"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_prod_name"
        android:layout_toRightOf="@id/image_relative"/>

    <TextView
        android:id="@+id/prod_amount"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingTop="2sp"
        android:text="1 item"
        android:layout_marginRight="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prod_name"
        android:layout_toRightOf="@id/image_relative"/>

    <TextView
        android:id="@+id/section_prod_price"
        android:layout_alignEnd="@id/section_prod_name"
        android:text="20$"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/plusminusarea"
        android:layout_below="@id/prod_amount"
        android:layout_toRightOf="@id/image_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="left"
            android:id="@+id/button_minus"
            android:layout_width="80px"
            android:layout_height="80px"
            android:text="-" />
        <TextView
            android:id="@+id/product_quantity"
            android:layout_gravity="center"
            android:layout_weight="@integer/google_play_services_version"
            android:textAlignment="center"
            android:text="1"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>
        <Button
            android:layout_gravity="right"
            android:id="@+id/button_plus"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="14dp"
            android:text="+" />
    </LinearLayout>


</RelativeLayout>